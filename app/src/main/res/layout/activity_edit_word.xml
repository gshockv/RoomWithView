<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.EditWordActivity">

    <EditText
            android:id="@+id/editTextWord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"
            android:hint="@string/edit_word_hint"/>
    <Button
            android:id="@+id/buttonSave"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/button_save"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextWord"
            app:layout_constraintStart_toStartOf="@+id/editTextWord"
            app:layout_constraintEnd_toEndOf="@+id/editTextWord"/>
</android.support.constraint.ConstraintLayout>